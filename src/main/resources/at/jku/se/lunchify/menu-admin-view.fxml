<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="77.0" style="-fx-background-color: #a0e1c3;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.jku.se.lunchify.MenuController">
   <left>
      <MenuBar fx:id="menu" prefHeight="37.0" prefWidth="639.0" styleClass="menu" stylesheets="@lunchify-style.css" BorderPane.alignment="CENTER">
        <menus>
          <Menu fx:id="upload" mnemonicParsing="false" text="Upload">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu fx:id="history" mnemonicParsing="false" text="History">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="i Bims Admin" />
        </menus>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </MenuBar>
   </left>
   <right>
      <Button fx:id="logout" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#onLogoutButtonClick" text="Logout" BorderPane.alignment="CENTER" />
   </right>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
