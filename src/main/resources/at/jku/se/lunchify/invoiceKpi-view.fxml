                  <Label fx:id="labelUserCount" text="-" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            
                                    <Label text="Anzahl erstattete Rechnungen:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
